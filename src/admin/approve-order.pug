extends layout.pug

block title
    | Orders


block content
    .container

        h1.has-text-info.is-size-3 Orders

        br

        .columns

            .column.is-4-desktop.is-12-tablet.is-12-mobile
                form(action="", method="post")
                    .field.is-fullwidth
                        .control
                            input.input(type="text", placeholder="Search")
                            


            .column.is-8-desktop.is-hidden-touch
                | &nbsp;
   

        .columns
            .column.is-12-desktop
                .table-container.is-fullwidth
                    table.table.is-bordered
                        thead
                            tr  
                                th Order #
                                th Items
                                th 
                                    .dropdown.is-hoverable
                                        .dropdown-trigger
                                            button.button(aria-haspopup='true', aria-controls='dropdown-menu')
                                                span Checklist
                                                span.icon.is-small
                                                    i.fas.fa-angle-down(aria-hidden='true')
                                        #dropdown-menu.dropdown-menu(role='menu')
                                            .dropdown-content
                                                a.dropdown-item(href='#')
                                                    | new value 1
                                                a.dropdown-item
                                                    | new value 2

                        tbody
                            tr  
                                td
                                    | &nbsp;
                                td
                                    | &nbsp;
                                td
                                    | &nbsp;
                            tr  
                                th
                                    | Total
                                td
                                    | &nbsp;
                                td
                                    | &nbsp;

        

        .columns
            .column.is-8-desktop.is-hidden-touch
                | &nbsp;
            
            .column.is-4-desktop.is-12-tablet.is-12-mobile
                nav.pagination.custom-pagination.is-right(role='navigation', aria-label='pagination')
                    ul.pagination-list
                        li
                            a.pagination-link(aria-label='Previous') 
                                i.las.la-angle-double-left

                        li
                            a.pagination-link.is-current(aria-label='Page 1') 
                                | 1
                        
                        li
                            a.pagination-link(aria-label='Page 2') 
                                | 2
                        
                        li
                            a.pagination-link(aria-label='Page 3') 
                                | 3

                        li
                            a.pagination-link(aria-label='Next') 
                                i.las.la-angle-double-right
                            


